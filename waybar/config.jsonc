// -*- mode: jsonc -*-
{
    "height": 28,
    "spacing": 6,
    "margin-top": 6,
    "margin-left": 10,
    "margin-right": 10,
    "margin-bottom": 0,
    
    "modules-left": [
        "hyprland/workspaces",
        "network",
        "custom/media"
    ],
    "modules-center": [
        "custom/clock"
    ],
    "modules-right": [
        "custom/copyq",
        "custom/wp",
        "mpd",
        "pulseaudio",
        "battery",
        //"battery#bat2",
        //"clock",
        "custom/cpu_memory",
        "custom/power"
    ],
    
    "hyprland/workspaces": {
        "format": "{id}",
        "on-click": "activate",
        "all-outputs": true,
        "sort-by-number": true
    },
    
    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "",
            "unlocked": ""
        }
    },
    
    "mpd": {
        "format": "{stateIcon} {artist} - {title}",
        "format-disconnected": "Disconnected ",
        "format-stopped": "Stopped ",
        "unknown-tag": "N/A",
        "interval": 5,
        "state-icons": {
            "paused": "",
            "playing": ""
        },
        "tooltip-format": "MPD (connected)",
        "tooltip-format-disconnected": "MPD (disconnected)"
    },
    
    "tray": {
        "icon-size": 15,
        "spacing": 6
    },
    
    "clock": {
        "format": "{:%d/%m  %H:%M}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
    },
    
    "battery": {
        "states": {
            "warning": 35,
            "critical": 15
        },
        "format": "{capacity}% {icon} ",
        "format-full": "{capacity}% {icon} ",
        "format-charging": "{capacity}% ÔÉß",
        "format-plugged": "{capacity}% ",
        "format-alt": "{time} {icon} ",
        //"format-warning": "{capacity}% {icon}", // An empty format will hide the module
        // "format-full": "",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },
    
    "battery#bat2": {
        "bat": "BAT2"
    },
    
    "network": {
        "format-wifi": "{essid} Ôá´ ",
        "format-ethernet": "",
        "tooltip-format": "{ifname} via {gwaddr} ",
        "format-linked": "{ifname} (No IP) ",
        "format-disconnected": "Desconectado ‚ö†",
        "on-click": "kitty --single-instance -e nmtui"
    },
    
    "pulseaudio": {
        "scroll-step": 1,
        "format": "{volume}% {icon} ",
        "format-bluetooth": "{volume}% {icon} Ôäî",
        "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source} ",
        "format-muted": "Û∞ñÅ",
        "format-source": "{volume}% ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "Ôö©",
            "hands-free": "Ôñê",
            "headset": "ÔÄ•",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol"
       
    },
    
    "custom/media": {
        "format": "{}",
        "return-type": "json",
        "max-length": 50,
        "format-icons": {
            "spotify": "",
            "default": "üéú"
        },
        "escape": true,
        "on-click": "~/.config/waybar/scripts/goto-spotify.sh",
        "exec": "$HOME/.config/waybar/scripts/mediaplayer.py --player spotify"
    },
    
    "custom/power": {
        "format": "Û∞ê•",
        "tooltip": false,
        "menu": "on-click",
        "menu-file": "$HOME/.config/waybar/power_menu.xml",
        "menu-actions": {
            "Apagar": "shutdown now",
            "Reiniciar": "reboot",
            "Suspender": "systemctl suspend"
        }
    },
    
    "custom/cpu_memory": {
        "exec": "$HOME/.config/waybar/scripts/cpu_mem.sh",
        "interval": 2,
        "return-type": "json",
        "on-click": "kitty --single-instance -e btop"
    },

    "custom/clock": {
        "exec": "$HOME/.config/waybar/scripts/clock_icon.sh",
        "tooltip":false,
        "interval": 60,
        "return-type": "json"
    },
    "custom/copyq" :{
        "tooltip": false,
        "on-click" : "copyq toggle",
        "format":"ÔÅø",
        "return-type": "json"
    }
    /*"custom/wp" :{
        "tooltip": false,
        "on-click" : "waypaper",
        "format":"Û∞∏â",
        "return-type": "json"
    }*/
}